[run]
source = backend
omit =
    */tests/*
    */venv/*
    */.venv/*
    */env/*
    */__pycache__/*
    */migrations/*
    */alembic/*
    backend/scripts/*

[report]
precision = 2
show_missing = True
skip_covered = False
sort = Cover

exclude_lines =
    pragma: no cover
    def __repr__
    raise AssertionError
    raise NotImplementedError
    if __name__ == .__main__.:
    if TYPE_CHECKING:
    @abstractmethod
    @abc.abstractmethod
    pass
    \.\.\.

[html]
directory = htmlcov

[xml]
output = coverage.xml
